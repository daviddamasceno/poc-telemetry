{
  "title": "POC Observability - Overview",
  "tags": ["poc", "observability"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate - Python Services",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
            "expr": "sum(rate(traces_span_metrics_calls_total{service_name=~\"python.*\"}[5m])) by (service_name)",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 2,
      "title": "Error Rate - Python Services",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
            "expr": "sum(rate(traces_span_metrics_calls_total{service_name=~\"python.*\", http_status_code=~\"5..\"}[5m])) by (service_name)",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Errors/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "Response Time (P95) - Python Services",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
            "expr": "histogram_quantile(0.95, sum(rate(traces_span_metrics_duration_milliseconds_bucket{service_name=~\"python.*\"}[5m])) by (service_name, le))",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "yaxes": [
        {"format": "ms", "label": "Latency (ms)"},
        {"format": "short"}
      ]
    },
    {
      "id": 4,
      "title": "Application Logs",
      "type": "logs",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "{container_name=~\"python.*\"}",
          "refId": "A",
          "datasource": {"type": "loki", "uid": "Loki"}
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
