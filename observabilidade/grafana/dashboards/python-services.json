{
  "title": "Python Services - Detailed Metrics",
  "tags": ["poc", "python", "services"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Python1 - Request Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
            "expr": "sum(rate(traces_span_metrics_calls_total{service_name=\"python1\"}[5m]))",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "thresholds"}
        }
      }
    },
    {
      "id": 2,
      "title": "Python2 - Request Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
            "expr": "sum(rate(traces_span_metrics_calls_total{service_name=\"python2\"}[5m]))",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "thresholds"}
        }
      }
    },
    {
      "id": 3,
      "title": "Python3 - Request Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
            "expr": "sum(rate(traces_span_metrics_calls_total{service_name=\"python3\"}[5m]))",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "thresholds"}
        }
      }
    },
    {
      "id": 4,
      "title": "Python Services - Request Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
            "expr": "histogram_quantile(0.50, sum(rate(traces_span_metrics_duration_milliseconds_bucket{service_name=~\"python.*\"}[5m])) by (service_name, le))",
          "legendFormat": "{{service_name}} - P50",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        },
        {
            "expr": "histogram_quantile(0.95, sum(rate(traces_span_metrics_duration_milliseconds_bucket{service_name=~\"python.*\"}[5m])) by (service_name, le))",
          "legendFormat": "{{service_name}} - P95",
          "refId": "B",
          "datasource": {"type": "prometheus", "uid": "Prometheus"}
        }
      ],
      "yaxes": [
        {"format": "ms", "label": "Latency"},
        {"format": "short"}
      ]
    },
    {
      "id": 5,
      "title": "Python Services - Logs",
      "type": "logs",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "{container_name=~\"python.*\"}",
          "refId": "A",
          "datasource": {"type": "loki", "uid": "Loki"}
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
